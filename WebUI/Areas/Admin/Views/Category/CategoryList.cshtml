@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-group a {
        margin-right: 5px;
    }
</style>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title">Kategori Listesi</h4>
        <a href="/Admin/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="basic-datatables"
                   class="display table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>KATEGORİ ADI</th>
                        <th>SEÇENEKLER</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryName</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-warning" href="/Admin/Category/UpdateCategory/@item.CategoryId"><i class="fas fa-pen"></i></a>
                                    <a class="btn btn-danger" href="/Admin/Category/DeleteCategory/@item.CategoryId"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
