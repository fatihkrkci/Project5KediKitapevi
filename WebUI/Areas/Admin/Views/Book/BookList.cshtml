@model List<ResultBookDto>

@{
    ViewData["Title"] = "BookList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-group a {
        margin-right: 5px;
    }
</style>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title">Kitap Listesi</h4>
        <a href="/Admin/Book/CreateBook" class="btn btn-primary">Yeni Kitap Ekle</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="basic-datatables"
                   class="display table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>KİTAP ADI</th>
                        <th>FİYATI</th>
                        <th>SAYFA SAYISI</th>
                        <th>GÖRSEL</th>
                        <th>SEÇENEKLER</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BookId</td>
                            <td>@item.BookName</td>
                            <td>@item.Price</td>
                            <td>@item.PageCount</td>
                            <td>
                                <img src="@item.ImageUrl" style="height:200px; width:auto" />
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-warning" href="/Admin/Book/UpdateBook/@item.BookId"><i class="fas fa-pen"></i></a>
                                    <a class="btn btn-danger" href="/Admin/Book/DeleteBook/@item.BookId"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
