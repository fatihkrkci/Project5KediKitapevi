@model List<ResultAuthorDto>

@{
    ViewData["Title"] = "AuthorList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .btn-group a {
        margin-right: 5px;
    }
</style>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title">Yazar Listesi</h4>
        <a href="/Admin/Author/CreateAuthor" class="btn btn-primary">Yeni Yazar Ekle</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="basic-datatables"
                   class="display table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ADI</th>
                        <th>SOYADI</th>
                        <th>HAKKINDA</th>
                        <th>GÖRSEL</th>
                        <th>SEÇENEKLER</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AuthorId</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.About</td>
                            <td>
                                <img src="@item.ImageUrl" style="height:100px; width:auto" />
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-warning" href="/Admin/Author/UpdateAuthor/@item.AuthorId"><i class="fas fa-pen"></i></a>
                                    <a class="btn btn-danger" href="/Admin/Author/DeleteAuthor/@item.AuthorId"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
